<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nathanmarciano.trackerandroid.controller.SignUpActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_signUp_title"
        android:layout_width="67dp"
        android:layout_height="18dp"
        android:text="S'inscrire"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="26dp" />

    <EditText
        android:id="@+id/activity_signUp_email"
        android:layout_width="326dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="E-mail"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="90dp" />

    <EditText
        android:id="@+id/activity_signUp_password"
        android:layout_width="326dp"
        android:layout_marginTop="20dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Mot de passe"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="155dp" />

    <Button
        android:id="@+id/activity_signUp_btn"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="S'inscrire"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="231dp" />

</LinearLayout>
